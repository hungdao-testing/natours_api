{
  "name": "natours_api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "npx rimraf ./dist/",
    "prebuild": "npm run clean",
    "build": "npx tsc && npm run build:js",
    "postbuild": "npx ts-node ./build_script.ts && npx rimraf ./src/",
    "format": "prettier --write ./src/**/*.ts ./src/public/js/*.js",
    "start": "cross-env TS_NODE_PROJECT=dist/tsconfig.json node -r tsconfig-paths/register ./dist/src/server.js",
    "start:api:local": "npx cross-env NODE_ENV=local nodemon ",
    "start:api:dev": "npx cross-env NODE_ENV=development ts-node --files ./src/server.ts",
    "start:api:prod": "npx cross-env NODE_ENV=production nodemon",
    "watch:js:local": "npx cross-env NODE_ENV=local parcel watch --no-hmr --target default --public-url ./",
    "watch:js:dev": "npx cross-env NODE_ENV=development parcel watch --no-hmr --target default --public-url ./",
    "build:js": "npx cross-env NODE_ENV=production parcel build --target prod --public-url ./",
    "build:app:local": "npx concurrently --kill-others \"npm run watch:js:local\" \"start npm run start:api:local\"",
    "build:app:dev": "npx concurrently --kill-others \"npm run watch:js:dev\" \"start npm run start:api:dev\"",
    "build:app:prod": "npx concurrently --kill-others \"npm run build:js\" \"start npm run start:api:prod\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/polyfill": "^7.12.1",
    "@parcel/config-default": "^2.6.0",
    "@parcel/transformer-pug": "^2.6.0",
    "@parcel/transformer-typescript-tsc": "^2.6.0",
    "@playwright/test": "^1.20.1",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/html-to-text": "^8.1.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.180",
    "@types/mapbox-gl": "^2.7.2",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.10",
    "@types/nodemailer": "^6.4.4",
    "@types/pug": "^2.0.6",
    "@types/rimraf": "^3.0.2",
    "@types/sharp": "^0.30.2",
    "@types/shelljs": "^0.8.11",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "allure-commandline": "^2.17.2",
    "allure-playwright": "^2.0.0-beta.15",
    "concurrently": "^7.1.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
