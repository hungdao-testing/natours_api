{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",
    "lib": ["ES2015", "DOM"],

    /* Modules */
    "module": "commonjs",
    "baseUrl": "./",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "rootDirs": ["./src", "./config"],
    "outDir": "./dist",
    "sourceMap": true
  },
  "exclude": ["node_modules", "types", "build_script.ts", "./src/public"]
}
