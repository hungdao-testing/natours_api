{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",
    "lib": ["ES2015"],

    /* Modules */
    "module": "commonjs",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
