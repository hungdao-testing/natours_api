{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Express Launch",
      "program": "${workspaceFolder}/src/server.ts",
      "preLaunchTask": "npm: dev",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "smartStep": true
    }
  ]
}
